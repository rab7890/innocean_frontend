<mvc:View
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc" 
	xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
	controllerName="portal.controller.AdminCode"
	
	>

     
	 	<Tree  width="20%"
			id="Tree"
			items="{path: '/'}"
            >
			<headerToolbar>
				<OverflowToolbar>
					<Title
						text="코드 관리" />
					<ToolbarSpacer />
					<ToggleButton
						icon="sap-icon://menu"
						tooltip="Enable / Disable Custom Context Menu"
						press="onToggleContextMenu" />
				</OverflowToolbar>
			</headerToolbar>
			<StandardTreeItem
				title="{text}"
				icon="{ref}"
                />
		</Tree>

       

        </mvc:View>